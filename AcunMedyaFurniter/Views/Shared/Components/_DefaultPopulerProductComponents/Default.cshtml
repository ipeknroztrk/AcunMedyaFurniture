@model List<AcunMedyaFurniter.DAL.Entities.Product>

<div class="popular-product">
    <div class="container">
        <!-- En çok satan ürünlerimiz başlığı -->
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="text-center">En Çok Satan Ürünlerimiz</h2>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 mb-4 mb-lg-0">
                    <div class="product-item-sm d-flex">
                        <div class="thumbnail">
                            <img src="@item.ProductImage" alt="Image" class="img-fluid">
                        </div>
                        <div class="pt-3">
                            <h3>@item.ProductName</h3>
                            <p>@item.Description</p>
                            <p><a href="#">Devamını Oku</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
