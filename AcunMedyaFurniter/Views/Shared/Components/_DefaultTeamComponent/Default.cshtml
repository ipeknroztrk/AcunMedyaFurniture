@model List<AcunMedyaFurniter.DAL.Entities.Team>

<div class="untree_co-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-5 mx-auto text-center">
                <h2 class="section-title">Ekibimiz</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-3 mb-5 mb-md-0 team-member">
                    <img src="@item.ImageUrl" class="img-fluid mb-3">
                    <h3><a href="#"><span>@item.NameSurname</span></a></h3>
                    <span class="d-block position mb-4">@item.Title</span>
                    <p>@item.Description</p>
                    <p class="mb-0"><a href="#" class="more dark">Devamını Oku <span class="icon-arrow_forward"></span></a></p>
                </div>
            }
        </div>
    </div>
</div>
<style>
    .team-member {
        text-align: center;
        margin-bottom: 30px;
    }

        .team-member img {
            width: 100%;
            height: 250px; /* Görselin sabit yüksekliği */
            object-fit: cover; /* Görselin oranlarını koruyarak keser */
            border-radius: 50%; /* Görselleri dairesel yapmak için */
        }

        .team-member h3 {
            font-size: 1.5rem;
            margin-top: 15px;
        }

        .team-member .position {
            font-size: 1rem;
            color: #888;
        }

        .team-member p {
            font-size: 0.875rem;
            color: #555;
        }

        .team-member .more {
            font-size: 0.875rem;
            text-decoration: none;
            color: #333;
        }
</style>
