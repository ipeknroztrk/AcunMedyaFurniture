@model List<AcunMedyaFurniter.DAL.Entities.Service>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<style>
    .icon-color {
        color: #007bff;
    }

    .icon-container {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

        .icon-container img {
            width: 20px; /* İkonun boyutu */
            height: 20px;
            margin-right: 10px;
        }

    .Service-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 10px;
    }

    .action-icons {
        display: flex;
        flex-direction: column;
        gap: 5px;
        margin-left: auto;
    }

        .action-icons a {
            font-size: 16px;
            text-decoration: none;
        }

        .action-icons .edit-icon {
            color: #007bff;
        }

        .action-icons .delete-icon {
            color: red;
        }

    .delete-icon button {
        border: none;
        background: none;
        padding: 0;
        color: red;
    }

        .delete-icon button:hover {
            color: darkred;
        }

    .delete-icon i {
        font-size: 20px;
    }
</style>

<div class="container mt-2 pt-3">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h4 class="card-title">Hizmetlerimiz</h4>
                <form method="get" action="@Url.Action("CreateService", "Service")" class="ms-auto">
                    <button type="submit" class="btn btn-primary btn-round">
                        <i class="fa fa-plus"></i> Ekle
                    </button>
                </form>
            </div>
        </div>
        <div class="row mt-3">
            @foreach (var item in Model)
            {
                <div class="col-sm-10 col-lg-4 mb-3">
                    <div class="card p-3">
                        <div class="icon-container">
                            <img src="~/furni-1.0.0/images/@item.Icon" alt="icon" />
                            <div>
                                <h5 class="mb-1">
                                    <b>@item.ServiceName</b>
                                </h5>
                                <small class="text-muted">@item.Description</small>
                            </div>
                            <div class="action-icons">
                                <a href="@Url.Action("UpdateService", "Service", new { id = item.ServiceID })" class="edit-icon">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <form method="post" action="@Url.Action("DeleteService", new { id = item.ServiceID })" class="delete-icon">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-link text-danger" onclick="return confirm('Bu referansı silmek istediğinizden emin misiniz?')">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }



            <br />
            <br />
            <br />
        </div>
    </div>
</div>
